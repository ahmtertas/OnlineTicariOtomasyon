@using OnlineTicariOtomasyon.Models.Classes
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Fatura Detay</h2>
<br />

<table class="table table-hover table-bordered table-striped">
    <tr class="table">
        <th>Id</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaKalemId</td>
            <td>@x.Aciklama</td>
            <td>@x.Miktar</td>
            <td>@x.BrimFiyat</td>
            <td>@x.Tutar</td>
        </tr>

    }

</table>
<a href="/Fatura/YeniKalem" class="btn btn-default" style="background-color:darksalmon; width:150px;">Yeni Kalem Girişi</a>


