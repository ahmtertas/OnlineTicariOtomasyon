@using OnlineTicariOtomasyon.Models.Classes
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover table-bordered table-striped">
    <tr class="table">
        <th>Ad Soyad</th>
        <th>Satışlar</th>
    </tr>
    @foreach(var x in Model) 
    {
        <tr>
            <td>@x.PersonelAdı @x.PersonelSoyadı</td>
            <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelId" class="btn btn-default btn-outline-primary">Satışlar</a></td>
        </tr> 
    }
    
</table>
