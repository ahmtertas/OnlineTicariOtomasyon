@using OnlineTicariOtomasyon.Models.Classes
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>Id</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

    @foreach (var personel in Model)
    {

        <tr>
            <td>
                @personel.PersonelId
            </td>
            <td>
                @personel.PersonelAdı
            </td>
            <td>
                @personel.PersonelSoyadı
            </td>
            <td>
                <img src="@personel.PersonelImage" style="width:100px; height:100px;" />
            </td>
            <td>
                @personel.Departman.DepartmanName
            </td>
            <td><a href="/Personel/PersonelGetir/@personel.PersonelId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Departman/DepartmanPersonelSatis/@personel.PersonelId" class="btn btn-warning">Satışlar</a></td>
        </tr>
    }

</table>
<a href="/Personel/PersonelEkle" class="btn btn-primary w-25">Personel Ekle</a>

