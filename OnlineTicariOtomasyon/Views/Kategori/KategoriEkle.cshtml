@model OnlineTicariOtomasyon.Models.Classes.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>KategoriEkle</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.KategoriAdı)
    @Html.TextBoxFor(x=>x.KategoriAdı, new {@class="form-control" })
    <br>
    <button class="btn btn-info" id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function () {
            alert("Kategori Eklendi.")
        });
    </script>
</form>
